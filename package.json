{
  "name": "todolist-justto",
  "author": "Guilherme Rios da Cunha <guilherme.rc.98@gmail.com> (https://riwersxd.github.io)",
  "bugs": "https://github.com/riwersxd/ToDoList-Justto/issues",
  "homepage": "https://github.com/riwersxd/ToDoList-Justto",
  "version": "2.0.0",
  "license": "MIT",
  "keywords": [
    "challenge",
    "justto-test",
    "todolist",
    "vuejs2",
    "vue-router",
    "vue-components",
    "spa"
  ],
  "description": "TODO List Challenge for Internship Vacancy at Justto - DONE",
  "repository": "github:riwersxd/ToDoList-Justto",
  "main": "src/main.js",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "vue": "^2.6.10",
    "vue-router": "^3.0.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.6.0",
    "@vue/cli-plugin-eslint": "^3.6.0",
    "@vue/cli-service": "^3.6.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.21"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/standard"
    ],
    "rules": {
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "never"
        }
      ],
      "vue/max-attributes-per-line": [
        2,
        {
          "singleline": 3,
          "multiline": {
            "max": 3,
            "allowFirstLine": false
          }
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
